<section class="module parallax parallax-1">
<div class="section">
  <div class="container">
    <div class="row">
      <div class="span4"></div>
      <div class="span4">
        <img class="center-block img-rounded" src="<%= @artist.profile_picture %>"
        width="304" height="236">
      </div>
      <% if current_user.artists.first.id == @artist.id%>
      <!-- Button trigger modal -->

    <div class="text-center"><button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHorizontal">
      Edit Profile
    </button>
  </div>
  <% end %>
      <div class="span4"></div>
